<h1>Listing mailings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Allow</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mailings.each do |mailing| %>
      <tr>
        <td><%= mailing.name %></td>
        <td><%= mailing.email %></td>
        <td><%= mailing.allow %></td>
        <td><%= link_to 'Show', mailing %></td>
        <td><%= link_to 'Edit', edit_mailing_path(mailing) %></td>
        <td><%= link_to 'Destroy', mailing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mailing', new_mailing_path %>
