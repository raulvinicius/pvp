<div class="user-form">

  <h1 class="logo">Loja PvP</h1>

  <h2>Registre-se</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="form-row">
    <%= f.label :name do %>
      Nome
    <% end %>
    <%= f.text_field :name, :autofocus => true, class: 'animado-02-in-out' %>
  </div>

  <div class="form-row">
    <%= f.label :nick do %>
      Nick
    <% end %>
    <%= f.text_field :nick, class: 'animado-02-in-out' %>
  </div>

    <%= f.hidden_field( :status, :value => '1' ) %>

  <div class="form-row">
    <%= f.label :email do %>
      Email
    <% end %>
    <%= f.email_field :email, class: 'animado-02-in-out' %>
  </div>

  <div class="form-row">
    <%= f.label :password do %>
      Senha
    <% end %>
    <%= f.password_field :password, class: 'animado-02-in-out' %>
  </div>

  <div class="form-row">
    <%= f.label :password_confirmation do %>
      Repita a senha
    <% end %>
    <%= f.password_field :password_confirmation, class: 'animado-02-in-out' %>
  </div>

  <div>
      <%= f.submit "Feito!", class: "animado-02-in-out" %></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
