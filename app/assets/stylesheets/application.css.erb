/*--------------------TEASER--------------------*/

#bg-logo
{
  margin-top: 48px;
  background: url(<%= asset_path 'lojapvp-bg-logo-teaser.png' %>);
  height: 168px;
}

#bg-logo .row
{
  margin: 0;
}

#bg-logo h1.logo
{
  background-position: center right;
}

#bg-logo h2
{
  margin-top: 50px;
  font-family: 'realisedregular', sans-serif; 
  font-size: 36px;
  color: #404041;
}

#bg-logo h2 span
{
  color: #6d6e71;
  display: block;
}

#wrap-menu
{
  padding-right: 0;
}

#menu-teaser
{
  background: url(<%= asset_path 'lojapvp-bg-menu-teaser.png' %>);
  height: 168px;
  width: 347px;
  margin-right: 0;
  display: block;
  margin-left: auto;
}

#menu-teaser.logged
{
  margin-top: -16px;
  background: url(<%= asset_path 'lojapvp-bg-logo-teaser.png' %>);
}

#menu-teaser.logged p 
{
  padding: 20px 30px 30px;
  line-height: 26px;
  font-family: 'ralewayregular', sans-serif;
  font-size: 16px;
  color: #666;
}

#menu-teaser.logged p span
{
  /*display: block;*/
  /*margin: 15px 0;*/
  color: #333;
  font-size: 30px;
  font-style: italic;
}

#menu-teaser ul
{
  margin: 0;
  padding: 0;
  text-align: center;
}

#menu-teaser li
{
  display: inline-block;
}

#menu-teaser li a
{
  padding-top: 0.1px;
  width: 168px;
  height: 168px;
  display: block;
  font-family: 'ralewayregular', sans-serif;
  font-size: 20px;
  color: #553f00;
  text-align: center;
  background: url(<%= asset_path 'lojapvp-bg-none-teaser.png' %>) !important;
}

#menu-teaser li a:hover,
#menu-teaser li a:focus
{
  background: url(<%= asset_path 'lojapvp-bg-menu-teaser.png' %>) !important;
  outline: none;
  background: none;
  text-decoration: none;
  color: #333;
}

#menu-teaser li a #icon
{
  width: 79px;
  height: 85px;
  display: block;
  margin: 30px auto 15px;
}

#menu-teaser li .registre #icon
{
  background: url(<%= asset_path 'lojapvp-icon-teaser-registre.png' %>);
}

#menu-teaser li .login #icon
{
  background: url(<%= asset_path 'lojapvp-icon-teaser-login.png' %>);
}


/*--------------------FIM TEASER--------------------*/




/*--------------------USER FORM--------------------*/

.user-form
{
  background: white;
  min-width: 348px;
  width: 40%;
  padding: 30px;
  margin: 40px auto 40px;
}

.user-form h2
{
  text-align: center;
  border-bottom: 1px solid #ccc;
  margin-bottom: 30px;
  padding-bottom: 20px;
}

.user-form .form-row
{
  margin-bottom: 20px;
}

.user-form label 
{
  font-family: 'ralewaybold', sans-serif;
  font-size: 14px;
  width: 30%;
  text-align: right;
  padding-right: 10px;
}

.form-row.checkbox 
{
  width: 80%;
  margin: 0 auto;
  display: block;
  margin-top: 30px;
  padding: 10px 20px;
  background: #EEE;
  text-align: center;
}

.form-row.checkbox input
{
  margin-right: 10px;
  float: none !important;
}

.user-form input[type="text"],
.user-form input[type="email"],
.user-form input[type="password"],
.user-form input[type="submit"]
{
  width: 60%;
  height: 40px;
  /* box-shadow: 0 0 10px #CCC; */
  border: none;
  /* border-radius: 4px; */
  border-left: 1px solid #CCC;
  outline: none;
  padding: 0 10px;
  font-family: 'ralewayregular', sans-serif;
  font-style: italic;
  font-size: 20px;
  color: #aaa;
}

.user-form input[type="text"]:hover,
.user-form input[type="text"]:focus,
.user-form input[type="email"]:hover,
.user-form input[type="email"]:focus,
.user-form input[type="password"]:hover,
.user-form input[type="password"]:focus
{
  color: #666;
}

.user-form input[type="submit"]
{
  width: 80%;
  height: 50px;
  background: #ccc;
  border: none;
  margin: 50px auto 0;
  display: block;
  font-style: normal;
}

.user-form input[type="submit"]:hover
{
  background: #666;
  color: white;
}

.user-form a.linkform 
{
  text-align: center;
  display: block;
  margin-top: 20px;
  font-size: 18px;
  font-family: 'ralewayregular', sans-serif;
  color: #666;
}

.user-form a.linkform:hover
{
  background: none;
  color: #000;
  text-decoration: none;
}

/*--------------------END USER FORM--------------------*/

